<!DOCTYPE html>
<html>
<head>
  <title>CaltrainTutor</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% @page ||= 'none' %>
<%= jqm_page @page do %>
  <div data-role="header">
    <%= image_tag 'traintrainlogo.png' %>
  </div>

  <div class="notice">
    <%= flash[:notice] %>
  </div>
  <div class="alert">
    <%= flash[:alert] %>
  </div>

  <%= yield %>

  <div data-role="footer" class="ui-bar nopadding nofade" data-position="fixed" data-theme="a" id="root_footer">
    <%= nav_for @page do |n| %>
      <%=
          n.button('discover',
                   {
                       :href => '/',
                       :data => {
                           :icon => :search,
                       }
                   }) %>
      <% if current_user %>

        <%=
            n.button('post',
                     {
                         :href => '/post',
                         :data => {
                             :icon => :'arrow-u',
                         }
                     }) %>
        <%=
            n.button('profile',
                     {
                         :href => '/me',
                         :data => {
                             :icon => :gear,
                         }
                     }) %>

      <% else %>
        <%=
            n.button('login',
                     {
                         :href => '/signin',
                         :data => {
                             :icon => :gear,
                         }
                     }) %>
      <% end %>
    <% end %>
  </div>
<% end %>

</body>
</html>
