<h1>Showing User</h1>
<!-- <%= @user.to_yaml %> -->
<%= @user.name %>
<img src="<%= @user.image %>" />

<h2>Teaching Soon</h2>
<% if @lessons_offered.present? %>
  <ul data-role="listview" data-theme="g">
    <% @lessons_offered.each do |lesson| %>

			<%= render :partial => 'preview', :locals => {:lesson => lesson } %>
			
    <% end %>
  </ul>
<% else %>
  No lessons yet.
<% end %>

]<h2>Taking Soon</h2>
<% if @lessons_taking.present? %>
  <ul data-role="listview" data-theme="g">
    <% @lessons_taking.each do |lesson| %>

			<li>
			  <a href="<%= lesson_path(lesson) %>">
			    <%= lesson.title %>
			    <br/><%= lesson.start %> <--> <%= lesson.end %> @ <%= lesson.time %>
			    <br/>Teacher: <%= lesson.creator.name %>
			    <% if lesson.student %>
			      <br/>Student: <%= lesson.student.name %>
			    <% end %>
			  </a>
			</li>
			
    <% end %>
  </ul>
<% else %>
  No lessons yet.
<% end %>