<h1><%= @lesson.title %></h1>

<%#= render parial: 'users/preview', locals: {user: @lesson.creator} %>

<div class="col">

</div>
<table>
  <tr>
    <td>
      <label>Leaving At</label>
    </td>
    <td>
      <label>
        from
      </label>
    </td>
    <td>
      <span class="info">
        <%= @lesson.start %>
      </span>
    </td>
  </tr>
  <tr>
    <td rowspan="2">
      <span class="time">
        <%= @lesson.time %>
      </span>
    </td>
    <td>
      <label>
        to
      </label>
    </td>
    <td>
      <span class="info">
        <%= @lesson.end %>
      </span>
    </td>
  </tr>
  <tr>
    <td>
      <label>
        length
      </label>
    </td>
    <td>
      <span class="info">
        45min
      </span>
    </td>
  </tr>
</table>

<br/>
<% if @lesson.student.present? %>
  <% if current_user == @lesson.student %>
    <a href="<%= buy_lesson_path(@lesson) %>">
      Complete
    </a>
  <% else %>
    Purchased already by <%= @lesson.student.name %>
  <% end %>
<% else %>
  <a  class="big_blue_button" href="<%= buy_lesson_path(@lesson) %>">
    Sign Up!
  </a>
<% end %>
